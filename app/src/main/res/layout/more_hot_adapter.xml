<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="312dp"
    android:orientation="horizontal"
    android:background="@color/dark_blue_grey"
    android:layout_height="@dimen/dp121">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="@dimen/dp84"
        android:layout_margin="@dimen/dp10"
        android:id="@+id/iv"
        android:layout_height="@dimen/dp101" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:textSize="@dimen/sp14"
            android:layout_marginTop="@dimen/dp10"
            android:id="@+id/tv_name"
            android:textColor="@android:color/white"
            android:layout_height="@dimen/dp20" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@android:color/white"
            android:id="@+id/tv_daoyan"
            android:layout_height="@dimen/dp17" />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@android:color/white"
            android:id="@+id/tv_zhuyan"
            android:layout_height="@dimen/dp17" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:layout_height="@dimen/dp20">

            <TextView
                android:layout_width="66dp"
                android:textSize="@dimen/sp12"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_pingfen"
                android:layout_height="@dimen/dp17" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp10"
                android:layout_width="@dimen/dp45"
                android:background="@color/lipstick"
                android:textSize="@dimen/sp12"
                android:textColor="@android:color/white"
                android:text="购票"
                android:id="@+id/tv_shopp"
                android:gravity="center"
                android:layout_height="@dimen/dp20" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>