<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:src="@mipmap/bag"
        android:scaleType="centerCrop"
        android:layout_height="305dp" />
    <ImageView
        android:layout_width="@dimen/dp24"
        android:src="@mipmap/shape"
        android:id="@+id/iv_left"
        android:layout_marginTop="@dimen/dp47"
        android:layout_marginLeft="@dimen/dp28"
        android:layout_height="@dimen/dp24" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="328dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/et_email"
            android:hint="请输入邮箱账号"
            android:textColorHint="@color/dark_gray"
            android:paddingLeft="@dimen/dp20"
            android:textSize="@dimen/sp14"
            android:textColor="@color/dark_gray"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginRight="@dimen/dp24"
            android:background="@drawable/edit_background"
            android:layout_height="@dimen/dp44" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/et_pwd"
                android:hint="请输入密码"
                android:layout_marginTop="@dimen/dp10"
                android:textColorHint="@color/dark_gray"
                android:paddingLeft="@dimen/dp20"
                android:textSize="@dimen/sp14"
                android:inputType="textPassword"
                android:textColor="@color/dark_gray"
                android:layout_marginLeft="@dimen/dp24"
                android:layout_marginRight="@dimen/dp24"
                android:background="@drawable/edit_background"
                android:layout_height="@dimen/dp44" />

            <Button
                android:layout_width="@dimen/dp96"
                android:background="@drawable/button_background"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/dp10"
                android:layout_alignParentRight="true"
                android:id="@+id/bt_forget"
                android:layout_marginRight="@dimen/dp24"
                android:layout_height="@dimen/dp44"
                android:text="忘记密码" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp10"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp24"
                android:id="@+id/tv_register"
                android:text="暂无账号 立即注册"
                android:textSize="@dimen/sp10"
                android:textColor="@color/dark_gray"
                android:layout_height="@dimen/dp14" />
        </RelativeLayout>
        <Button
            android:layout_marginTop="@dimen/dp12"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dp24"
            android:layout_marginLeft="@dimen/dp24"
            android:background="@drawable/login_background"
            android:text="登录"
            android:id="@+id/bt_login"
            android:textSize="@dimen/sp16"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp20"
            android:layout_height="wrap_content">
            <View
                android:layout_width="@dimen/dp93"
                android:layout_marginLeft="@dimen/dp73"
                android:layout_centerVertical="true"
                android:background="@android:color/white"
                android:layout_height="3dp"/>
            <TextView
                android:layout_width="@dimen/dp14"
                android:text="或"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/dp20" />
            <View
                android:layout_width="@dimen/dp93"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp73"
                android:background="@android:color/white"
                android:layout_height="3dp"/>
        </RelativeLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:scaleType="center"
            android:layout_marginTop="@dimen/dp20"
            android:id="@+id/bt_wx"
            android:layout_marginRight="@dimen/dp24"
            android:layout_marginLeft="@dimen/dp24"
            android:background="@drawable/wx_background"
            android:src="@mipmap/weixin_copy_3"
            android:layout_height="@dimen/dp44" />
    </LinearLayout>


</RelativeLayout>