<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp10"
    android:id="@+id/re"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="312dp"
        android:layout_marginTop="@dimen/dp20"
        android:background="@color/dark_blue_grey"
        android:layout_height="@dimen/dp98">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp118"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            
            <TextView
                android:layout_width="@dimen/dp84"
                android:textSize="@dimen/sp14"
                android:id="@+id/tv_name"
                android:layout_marginTop="@dimen/dp14"
                android:textColor="@android:color/white"
                android:layout_height="@dimen/dp20" />
            <TextView
                android:layout_width="@dimen/dp77"
                android:textSize="@dimen/sp12"
                android:layout_marginTop="@dimen/dp11"
                android:id="@+id/tv_data"
                android:textColor="@android:color/white"
                android:layout_height="@dimen/dp17" />

            <TextView
                android:layout_width="@dimen/dp55"
                android:textSize="@dimen/sp12"
                android:textColor="@android:color/white"
                android:layout_marginTop="@dimen/dp10"
                android:id="@+id/tv"
                android:layout_height="@dimen/dp17" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="@dimen/dp45"
            android:background="@color/lipstick"
            android:textSize="@dimen/sp12"
            android:textColor="@android:color/white"
            android:text="预约"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:id="@+id/tv_shopp"
            android:gravity="center"
            android:layout_height="@dimen/dp20" />
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="@dimen/dp88"
        android:id="@+id/iv"
        android:src="@mipmap/men"
        android:layout_height="@dimen/dp108" />
</RelativeLayout>